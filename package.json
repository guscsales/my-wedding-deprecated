{
	"name": "weeding-site",
	"version": "0.0.0",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"build": "PROFILE=prod rimraf dist && tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "PROFILE=prod ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "PROFILE=local tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
		"start:debug": "PROFILE=local tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
		"start:prod": "PROFILE=prod node dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:run": "ts-node ./node_modules/typeorm/cli migration:run -c=migration_local",
		"migration:create": "ts-node ./node_modules/typeorm/cli migration:create -d=src/migrations"
	},
	"dependencies": {
		"@nestjs/common": "^6.11.8",
		"@nestjs/core": "^6.11.8",
		"@nestjs/jwt": "^6.1.1",
		"@nestjs/passport": "^6.2.0",
		"@nestjs/platform-express": "^6.11.8",
		"@nestjs/serve-static": "^2.1.3",
		"@nestjs/typeorm": "^6.3.2",
		"@sendgrid/mail": "^6.5.3",
		"@types/uuid": "^3.4.7",
		"@vitalets/google-translate-api": "^3.0.0",
		"apicalypse": "^0.1.6",
		"crypto2": "^2.0.0",
		"dayjs": "^1.8.23",
		"express-rate-limit": "^5.1.1",
		"helmet": "^3.21.2",
		"mysql": "^2.18.1",
		"nookies": "^2.3.2",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pug": "^2.0.4",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.5.4",
		"typeorm": "^0.2.22",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@nestjs/testing": "^6.11.8",
		"@types/express": "4.17.2",
		"@types/jest": "25.1.3",
		"@types/node": "13.7.4",
		"@types/passport-jwt": "^3.0.3",
		"@types/passport-local": "^1.0.33",
		"@types/supertest": "2.0.8",
		"cross-env": "^7.0.0",
		"dotenv": "^8.2.0",
		"jest": "25.1.0",
		"prettier": "1.19.1",
		"supertest": "4.0.2",
		"ts-jest": "25.2.1",
		"ts-node": "8.6.2",
		"tsc-watch": "4.1.0",
		"tsconfig-paths": "3.9.0",
		"tslint": "6.0.0",
		"typescript": "3.8.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
